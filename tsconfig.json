{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
